#include<iostream>
#include<string>
#include<vector>

using std::cout;
using std::cin;
using std::endl;

struct Tool{
	std::string name;
	int level;
	std::vector<std::string> alias = {"aa","bb","cc"};
	int data[3]; 
};

class Student{
public:
	Student(std::string name,int power):name(name),power(power){}
	std::string greeting() const{
		std::string greeting = "Hello I'm "+name;
		return greeting;
	}
	std::string info() const{
		return name+":"+std::to_string(power);	
	}
	void powerup(int delta){
		power += delta;
	}
private:
	std::string name;
	int power;
	Tool tool;
};

int main(){
	Student student("luMinO",100);

	cout<<student.greeting()<<endl;	
	cout<<student.info()<<endl;	

	return 0;
}
