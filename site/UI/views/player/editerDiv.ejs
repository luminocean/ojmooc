<div id="optionPanel">
    <span class="label label-default">大小</span>
    <select id="fontsize" size="1">
        <option value="11px">11px</option>
        <option value="12px" selected="selected">12px</option>
        <option value="13px">13px</option>
        <option value="14px">14px</option>
    </select>
    <span class="label label-default">语言</span>
    <select id="language" size="1">
        <option value="cpp" selected="selected">C/C++</option>
        <option value="pas">pascal</option>
        <option value="bas">Qbasic</option>
    </select>
    <input type="submit" id="run" value="运行">
    <input type="submit" id="debugBegin" value="开始调试">
    <input type="submit" id="debugInto" value="调试">
    <input type="submit" id="debugOut" value="退出调试">
</div>

<div id="editorPanel">
    <div id="leftPanel" style="float: left;">
        <div id="variable" class="panel panel-info col-sm-12 debugInfoPanel" style="overflow: scroll">
            <div class="panel-heading">变量
                <button type="button" class="btn btn-default" aria-label="Right Align" data-toggle="modal"
                        data-target="#addVariable">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                </button>
            </div>
            <table id="variablesTb" class="table table-bordered"></table>
        </div>
        <div id="operate" class="panel panel-info col-sm-12 debugInfoPanel">
            <div class="panel-heading">操作</div>
            <button type="button" class="btn btn-primary btn-lg btn-block" id="stepInto">单步进入</button>
            <button type="button" class="btn btn-primary btn-lg btn-block" id="stepOver">单步越过</button>
            <button type="button" class="btn btn-primary btn-lg btn-block" id="continue">继续</button>
            <button type="button" class="btn btn-primary btn-lg btn-block" id="exit">退出</button>
        </div>
    </div>

    <div id="midPanel" style="float: left">
        <div id="editor"></div>
        <div id="inputEditor" style="float: left;"></div>
        <div id="outputEditor" style="float: left;"></div>
    </div>

    <div id="rightPanel" style="float: left;">
        <div id="breakpoint" class="panel panel-info  debugInfoPanel" style="overflow: scroll;">
            <div class="panel-heading">断点</div>
            <table id="breakpointsTb" class="table table-bordered"></table>
        </div>
        <div id="stack" class="panel panel-info  debugInfoPanel" style="overflow: scroll;">
            <div class="panel-heading">堆栈</div>
            <table id="localsTb" class="table table-bordered"></table>
        </div>
    </div>
</div>
